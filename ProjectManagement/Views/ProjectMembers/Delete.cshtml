@model ProjectManagementBusinessObjects.ProjectMember

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to remove this project member?</h3>
<h3>Note: If you remove this member, all the task assigned to this member will be deleted.</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Project Member
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProjectMemberId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-action="Index" asp-route-id="@ViewBag.projectId">Back to Members</a>
    </form>
</div>
