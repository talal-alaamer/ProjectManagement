@model ProjectManagementBusinessObjects.ProjectMember

@{
    ViewData["Title"] = "Create";
}

<h1>Add Members</h1>

<h4>ProjectMember</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
