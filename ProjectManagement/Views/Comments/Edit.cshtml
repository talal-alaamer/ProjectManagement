@model ProjectManagementBusinessObjects.Comment

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Comment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CommentId" />
            <div class="form-group">
                <label asp-for="CommentText" class="control-label">Comment</label>
                <textarea required asp-for="CommentText" class="form-control"></textarea>
                <span asp-validation-for="CommentText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label">Commenter</label>
                <input required readonly class="form-control" value="@ViewBag.Commenter" />
                <input hidden asp-for="UserId" class="form-control" value="@ViewBag.CommenterId" />
                <input hidden asp-for="TaskId" value="@ViewBag.TaskId" />
                <input hidden asp-for="CommentTimestamp" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@ViewBag.TaskId">Back to Comments</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
